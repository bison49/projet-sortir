{% extends 'base.html.twig' %}

{% block title %}Ajout d'un site{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col" align="center">
            <h2>GÃ©rer les sites</h2>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3>Filtrer les sites</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <form class="d-flex" method="post" action="{{ path('app_sites_ajout') }}">
                <label for="rechercher">Le nom contient: </label>
                <input id="rechercher" name="siteRech" class="form-control me-2 rechercher" type="search" placeholder="Le site contient" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Rechercher</button>
            </form>
        </div>
        <div class="col-6"></div>
    </div>
    {% for message in app.flashes('succes') %}
        <div class="alert alert-success text-center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-6">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Villes</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for site in nom %}
                <tr>

                    <th scope="row">{{ site.nom}}</th>
                    <td><button data-site="{{ site.id }}" class="btn btn-outline-danger">Supprimer</button>
                    </td>

                </tr>
                    <tr>
                {% endfor %}
                        {{ form_start(formAdd) }}
               <th> {{ form_widget(formAdd.nom) }} </th>
                        <th>  <button type="submit" class="btn btn-outline-success">Ajouter</button> </th>
                {{ form_end(formAdd) }}
                    </tr>
                </tbody>
            </table>


        </div>
    </div>


</div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('.btn-outline-danger').click(function () {
                let site_id = $(this).attr("data-site");

                if (confirm("Voulez-vous vraiment supprimer ce voeu ?")) {
                    window.location.href = '/site/supprimerSite/' + site_id;
                }
            })
        });
    </script>
{% endblock %}
