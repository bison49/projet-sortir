{% extends 'base.html.twig' %}
{% block title %}Affichage d'une sortie{% endblock %}

{% block body %}
    <div class="container">
        <H3 class="text-center my-5">Afficher une sortie</H3>

        <div class="row ">
            <div class="offset-1 col-5">
                <div class="form-group">
                    <p><label for="nom"><strong>Nom de la sortie :</strong> {{ sortie.nom }}</label></p>
                </div>

                <div class="form-group">
                    <p><label for="nom"><strong>Date et heure de la sortie
                                :</strong> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</label></p>
                </div>
                <div class="form-group">
                    <p><label for="nom"><strong>Date limite d'inscription
                                :</strong> {{ sortie.dateFinInscription|date('d/m/Y H:i') }}</label></p>
                </div>
                <div class="form-group">
                    <p><label for="nom"><strong>Nombre de places :</strong> {{ sortie.nbInscriptionMax }}</label></p>
                </div>
                <div class="form-group">
                    <p><label for="nom"><strong>Dur√©e :</strong> {{ sortie.duree }}</label></p>
                </div>
            </div>
            <div class="offset-1 col-5">
                <div class="form-group">
                    <p><label for="nom"><strong>Description et info :</strong> {{ sortie.description }}</label></p>
                </div>

                <div class="form-group">
                    <p><label for="nom"><strong>Ville organisatrice
                                :</strong> {{ sortie.siteOrganisateur.nom }}</label></p>
                </div>
                <div class="form-group">
                    <p><label for="nom"><strong>Lieu
                                :</strong> {{ sortie.noLieu.nom }}</label></p>
                </div>
                <div class="form-group">
                    <p><label for="nom"><strong>Rue:</strong> {{ sortie.noLieu.rue }}</label></p>
                </div>
                <div class="form-group">
                    <p><label for="nom"><strong>Code postal :</strong> {{ sortie.noLieu.noVille.codePostal }}</label>
                    </p>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="offset-3 col-6 listing my-4">

            </div>

        <div class="text-center my-3">
            <button type="button" data-sortie="{{ sortie.id }}" data-orga="{{ sortie.organisateur.id }}" data-user="{{ app.user.id }}" class="btn btn-primary liste" onClick="this.disabled = true;">Afficher les participants</button>

            <a href="{{ path('app_main') }}">
                <button type="button"  class="btn btn-outline-primary">Retour</button>
            </a>
        </div>


    </div>
{% endblock %}
{% block js %}
    <script type="text/javascript" src="{{ asset('/js/sortie.js') }}"></script>
{% endblock %}