<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
    {% if is_granted('ROLE_ADMIN') %}
    {% set menu = {"Accueil":"app_main","Participants":"app_participant","Villes":"app_villes","Sites":"app_sites","Mon profil":"app_profil","Se déconnecter":"app_logout"} %}
    {% else %}
    {% set menu = {"Accueil":"app_main","Mon profil":"app_profil","Se déconnecter":"app_logout"} %}
    {% endif %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Sortir</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse justify-content-between" id="navbarColor02">

                <ul class="navbar-nav mr-auto"></ul>
                <ul class="navbar-nav">
                    {% for key,value in menu %}
                    <li class="nav-item">
                        <a class="nav-link active" href="#">{{ key }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>

            </div>
        </div>
    </nav>
    <main>
        {% block body %}{% endblock %}
    </main>


    <footer class="bg-light text-center text-lg-start basdepage">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2022 Copyright:
            <a class="text-dark" href="/">sortir.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    </body>
</html>
