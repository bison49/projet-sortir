{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-7 text-center" >
            <H1 class="my-5 titre-page">Je modifie mon mot de passe</H1>
        </div>
        <div class="col-3"></div>
    </div>
    {% for message in app.flashes('erreur') %}
        <div class="alert alert-danger text-center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-5">
            {% if app.user.photo %}
                <img src="uploads/{{ asset(app.user.photo) }}" alt="Avatar" width="50%" class="antoine">
            {% else %}
                <img src="https://www.excel-downloads.com/data/avatars/o/362/362988.jpg?1637756820" alt="Avatar" width="50%" class="antoine">
            {% endif %}
        </div>
        <div class="col-5 ">
            {{ form_start(formMdp) }}

            {{ form(formMdp) }}

            {{ form_end(formMdp) }}
        </div>
    </div>

</div>
{% endblock %}