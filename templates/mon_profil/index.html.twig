        <div class="col-5">
            <img src="uploads/{{ asset(app.user.photo) }}" alt="Avatar" width="50%" class="antoine">
            <br><br>
            <button type="button" class="btn btn-primary" onclick="window.location.href = '/photo';">Modifier ma photo</button>

        </div>

        <div class="col-5 ">
           <p>Bonjour <b> {{ app.user.nom }} {{ app.user.prenom }}</b> vous Ãªtes sur le site de {{app.user.noSite.nom }} </p>

            {{ form_start(formModif) }}

            {{ form(formModif) }}

            {{ form_end(formModif) }}
            <button type="button" class="btn btn-primary" onclick="window.location.href = '/mdp';">Modifier mot de passe</button>

        </div>


    </div>
</div>
{% endblock %}
